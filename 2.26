import java.util.Scanner;

public class SumNumber
{
    public static void main(String [] args)
    {
        Scanner in = new Scanner(System.in);
        int num = in.nextInt();
        int result = 0;
        for(int i =1;i<=num;i++)
        {
            result = result + i;
        }
        System.out.println("The sum of the numbers from  1 to " + num + " is " + result);
    }
}
